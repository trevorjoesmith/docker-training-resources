# Development Dockerfile with hot-reload
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source files (will be overridden by volume mount in development)
COPY . .

# Expose port 3000 for Docusaurus dev server
EXPOSE 3000

# Start development server
CMD ["npm", "start", "--", "--host", "0.0.0.0", "--poll"]
